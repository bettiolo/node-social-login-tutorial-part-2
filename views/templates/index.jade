h3 Social Login: Client-side login + Server-side user management
p Status: {{ login.getStatus() }}
p(ng-show='login.token') Token: {{ login.token }}
p(ng-show='login.existingUser !== null') User already registered: {{ login.existingUser }}
div(ng-show='login.isLoggedIn()')
	p Name: {{ login.user.name }}
	p Email(s):&nbsp;
		span(ng-repeat='email in login.user.emails') {{ email }}
	p User ID: {{ login.user.id }}
	p Domain: {{ login.user.domain }}
